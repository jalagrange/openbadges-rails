<%= form_for @organization, :html => { :multipart => true } do |f| %>
  <legend>Issuer Organization Details</legend>

  <div class= "edit-image">
    <%= label_tag "Image (optional)" %>
    <%= image_tag @organization.image.url %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name,
      :class => "input-xlarge",
      :required => "",
      :placeholder => "http://example.org" %>
    <span class="help-block">
      Name of the issuer. This should be the top-level name of your
      institution, e.g. "Mozilla".
    </span>
  </div>

  <div class="field">
    <%= f.label :url %>
    <%= f.url_field :url,
      :class => "input-xlarge",
      :required => "",
      :placeholder => "admin@example.org" %>
    <span class="help-block">
      Website of the organization.
    </span>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email,
      :class => "input-xlarge",
      :placeholder => "admin@example.org"%>
    <span class="help-block">
      Contact at your organization for any badge-related issues. It's
      probably best to make this email something that won't change, so
      don't make it a specific person and use a forwarding email address
      instead.
    </span>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description,
      :rows => 3,
      :class => "input-xxlarge",
      :placeholder => "Lorem ipsum dolor sit amet, consectetur adipisicing elit..."%>
    <span class="help-block">
      A short description of the organization for your issuer.
    </span>
  </div>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>

<% end %>