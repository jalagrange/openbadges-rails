<%= form_for(@badge) do |f| %>

  <% if defined?(title) && title.is_a?(String) && !title.empty? %>
    <legend><%= title %></legend>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "input-xlarge", :required => "" %>
    <span class="help-block">
      The name of the achievement.
    </span>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.url_field :image, :class => "input-xlarge", :required => "" %>
    <span class="help-block">
      URL or <a href="http://en.wikipedia.org/wiki/Data_URI_scheme">Data URL</a> of an image representing the achievement.
    </span>
  </div>

  <div class="field">
    <%= f.label :criteria %>
    <%= f.url_field :criteria, :class => "input-xlarge", :required => "" %>
    <span class="help-block">
      URL of the criteria for earning the achievement. If the badge represents an educational achievement, consider marking up this up with <a href="http://www.lrmi.net">LRMI</a>
    </span>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => 3, :class => "input-xxlarge", :required => "" %>
    <span class="help-block">
      A short description of the achievement.
    </span>
  </div>

  <!-- Tags -->
  <!--
  <div class="field">
    <%= f.label :badge_tags %>
    <div class="input-xxlarge" style="white-space:nowrap;line-height: 30px; padding-left: 6px; -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075); border: 1px solid #cccccc; border-radius: 3px; -webkit-border-radius: 3px; vertical-align: middle; overflow: hidden;">
    <span class="label">Ice</span>
    <span class="label">Fire</span>
    <span class="label">Wind</span>
    <input type="text" style="width:100%; margin: 0px; border: none; background: none; -webkit-box-shadow: none;">
    <%= f.text_field :badge_tags, :class => "input-xxlarge", :style => 'margin: 0; border: none; background: none; outline: 0; -webkit-box-shadow: none;' %>
    </div>
    <span class="help-block">
      List of tags that describe the type of achievement.
    </span>
  </div>
  -->

  <!-- Alignments -->
  <div class="field">
    <%= f.label :badge_alignments %>
    <% selected = @badge.badge_alignments.map(&:alignment_id) %>
    <% selections = OpenBadges::Alignment.all.map{ |a| [a.name, a.id] } %>
    <%= f.select :alignment_ids, options_for_select(selections, selected), {}, { :class => "input-xxlarge", :multiple => true } %>
    <span class="help-block">
      List of educational standards this badge aligns to, if any.
    </span>
  </div>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>

<% end %>
